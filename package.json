{
    "name": "ilib-assemble",
    "version": "1.0.0",
    "main": "./src/index.js",
    "bin": {
        "ilib-assemble": "./src/index.js",
        "ilib-assemble.bat": "./ilib-scanner.bat"
    },
    "description": "Utility to assemble locale data and resource files into single files for webpack to include",
    "keywords": [
        "internationalization",
        "i18n",
        "localization",
        "l10n",
        "globalization",
        "g11n",
        "data",
        "locale"
    ],
    "email": "ehoogerbeets@gmail.com",
    "author": {
        "name": "Edwin Hoogerbeets",
        "web": "http://www.translationcircle.com/",
        "email": "ehoogerbeets@gmail.com"
    },
    "contributors": [
        {
            "name": "Edwin Hoogerbeets",
            "email": "ehoogerbeets@gmail.com"
        },
        {
            "name": "Goun Lee",
            "email": "goun.lee@lge.com"
        }
    ],
    "files": [
        "src",
        "lib",
        "docs",
        "README.md",
        "LICENSE"
    ],
    "repository": {
        "type": "git",
        "url": "git@github.com:iLib-js/ilib-assemble.git"
    },
    "scripts": {
        "build": "npm run build:prod",
        "build:prod": "grunt babel --mode=prod",
        "build:dev": "grunt babel --mode=dev",
        "dist": "npm run doc ; npm run build:prod ; npm run build:web; npm pack",
        "test": "LANG=en_US.UTF8 node test/testSuite.mjs",
        "testall": "LANG=en_US.UTF8 npm run test; npm run build:test ; open-cli ./test/testSuite.html ; open-cli ./test/testSuite.html -- firefox",
        "debug": "npm run build:dev ; node --inspect-brk test/testSuite.js",
        "clean": "git clean -f -d *",
        "doc": "mkdir -p docs ; jsdoc2md -c jsdoc.json --separators --source src/* -m table > docs/ilibCommon.md ; npm run doc:html",
        "doc:html": "jsdoc -c jsdoc.json"
    },
    "devDependencies": {
        "assertextras": "^1.1.0",
        "docdash": "^1.2.0",
        "grunt": "^1.5.3",
        "grunt-babel": "^8.0.0",
        "grunt-cli": "^1.4.3",
        "grunt-contrib-clean": "^2.0.1",
        "grunt-contrib-jshint": "^3.2.0",
        "grunt-contrib-nodeunit": "^4.0.0",
        "grunt-contrib-uglify": "^5.2.1",
        "ilib-mock": "file:test/ilib-mock/ilib-mock-1.0.0.tgz",
        "jsdoc": "^3.6.10",
        "jsdoc-to-markdown": "^7.1.1",
        "load-grunt-tasks": "^5.1.0",
        "nodeunit": "^0.11.3"
    },
    "engines": {
        "node": ">=16.0"
    },
    "dependencies": {
        "ilib-common": "^1.0.3",
        "ilib-locale": "^1.1.1",
        "json5": "^2.2.1",
        "options-parser": "^0.4.0"
    }
}
